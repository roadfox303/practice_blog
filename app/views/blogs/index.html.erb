<div id="wrapper">
  <h1>ブログ</h1>
  <p><%= notice %></p>
  <%= link_to 'ブログ新規作成', new_blog_path %>
  <% @blogs.each do |blog| %>
  <div class="blog clearfix">
    <div><span class="blog_id"><%= blog.id %></span><span class="blog_date"><%= blog.created_at.strftime("%Y-%m-%d %H:%M") %></span></div>
    <h3><%= blog.title %></h3>
    <p><%= blog.content %></p>
    <div class="buttons">
      <%= link_to '確認', blog_path(blog.id) %>
      <%= link_to '編集', edit_blog_path(blog.id) %>
      <%= link_to '×', blog_path(blog.id), method: :delete %>
    </div>
  </div>
  <% end %>
</div>
